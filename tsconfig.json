{
  "compilerOptions": {
    "target": "es2020", //required for use with BigInt types
    // "module": "commonjs",
    "module": "NodeNext",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "checkJs": false,
    "outDir": "build",
    // "rootDirs": [
    //   "src",
    //   "generated",
    //   "test"
    // ],
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    // "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    // "test",
    "generated"
  ]
}
